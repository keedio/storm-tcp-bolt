  <artifactId>storm-tcp-bolt</artifactId>
  <name>storm-tcp-bolt</name>
  <version>1.0.2-SNAPSHOT</version>
  <description>This bolt receives a byte array writes the bytes to the configured host and port. It is used in order to inject
        data to Splunk.</description>
  <url>https://github.com/keedio/storm-tcp-bolt</url>
  <developers>
    <developer>
      <name>Marcelo Valle</name>
      <email>mvalle@keedio.org</email>
      <organization>Keedio</organization>
      <organizationUrl>http://www.keedio.com</organizationUrl>
    </developer>
    <developer>
      <name>Rodrigo Olmo Velasco</name>
      <email>rolmo@keedio.org</email>
      <organization>Keedio</organization>
      <organizationUrl>http://www.keedio.com</organizationUrl>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>The Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git@github.com:keedio/storm-tcp-bolt.git</connection>
    <developerConnection>scm:git:git@github.com:keedio/storm-tcp-bolt.git</developerConnection>
    <url>https://github.com/keedio/storm-tcp-bolt</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <executions>
          <execution>
            <id>attach-javadocs</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
